<VirtualHost *>
  ServerName <%=application%>
  DocumentRoot <%= "#{current_path}/wordpress" %> 
  <Directory <%= "#{current_path}/wordpress" %>>
    Options Indexes FollowSymLinks
    AllowOverride All
  </Directory>
  LogLevel warn
  ErrorLog <%= "#{shared_path}/log/apache2/error.log" %> 
  CustomLog <%= "#{shared_path}/log/apache2/access.log common" %>
</VirtualHost>